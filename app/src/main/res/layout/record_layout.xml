<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="@dimen/record_margin_LR"
    android:layout_marginRight="@dimen/record_margin_LR"
    android:layout_marginTop="@dimen/record_margin_top"
    card_view:cardBackgroundColor="@android:color/white"
    card_view:cardCornerRadius="@dimen/record_corner_radius"
    card_view:contentPaddingTop="@dimen/record_padding_top">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/short_user_info_layout" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/record_recycler"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/small_image_recycler_view" />

        <TextView
            android:id="@+id/description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/description_text_size" />

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/tablayout_separator_height"
            android:layout_marginEnd="@dimen/separator_margin_LR"
            android:layout_marginStart="@dimen/separator_margin_LR"
            android:layout_marginTop="@dimen/separator_margin_top"
            android:background="@color/colorSeparator" />

        <RadioGroup
            android:id="@+id/radio_group"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/options_margin_top" />

    </LinearLayout>
</android.support.v7.widget.CardView>
<resources>

    <style name="AppThemeSignIn" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="AppThemeMain" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorOverflowIcon</item>
        <item name="android:windowBackground">@color/colorBackgroundFragment</item>
        <item name="android:dropDownListViewStyle">@style/SearchViewStyle</item>
    </style>

    <style name="ToolbarTitle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">@dimen/toolbar_title_size</item>
    </style>

    <style name="SearchViewStyle" parent="Widget.AppCompat.ListView.DropDown">
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="RecordDetailTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textColorSecondary">@color/colorToolbarText</item>
        <item name="android:windowBackground">@color/colorToolbarText</item>
    </style>

    <style name="NewRecordTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/colorHint</item>
        <item name="android:textColorPrimary">@color/colorToolbarText</item>
        <item name="android:textColorSecondary">@color/colorToolbarText</item>
        <item name="android:windowBackground">@android:color/white</item>
    </style>

    <style name="AppThemeSearchDialog" parent="Theme.AppCompat.Dialog">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorSecondary">@android:color/white</item>
        <item name="android:colorBackground">#99000000</item>
    </style>

    <style name="AppThemeDialogSignUp" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

</resources>
